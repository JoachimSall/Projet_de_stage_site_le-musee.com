<div class="container mt-3 shadow-lg p-0 mb-5 bg-white rounded">
    <div id="carouselExampleSlidesOnly" class="carousel slide carousel-fade" data-interval="3000" data-pause="false" data-ride="carousel">
        <div class="carousel-inner">
        {% for voiture in voitures %}
            {% set url = path('voitures_show',{'slug': voiture.slug}) %}
                <div class="carousel-item {% if loop.first %} active {% endif %}">
                    <a href="{{ url }}" target="_blank">
                        <img src="{{ voiture.coverImage }}" class="img-fluid" style="height: 500px; width: 100%; display: block" alt="Responsive image" alt="...">
                    </a>
                    <div class="carousel-caption d-none d-md-block">
                        <a href="{{ url }}" target="_blank">
                            <h1 class="voiture-title">{{ voiture.marque }} {{ voiture.modele }} {% if voiture.type %} {{ voiture.type }} {% endif %}</h1>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<div class="container">
